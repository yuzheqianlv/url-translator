# 生产环境配置示例
# 复制此文件为 .env.production 并修改相应值

# ===== 生产环境API配置 =====
FRONTEND_API_BASE_URL=https://your-domain.com/api/v1
FRONTEND_API_TIMEOUT_SECONDS=30

# ===== 生产环境功能配置 =====
ENABLE_PROJECT_MANAGEMENT=true
ENABLE_HISTORY=true
ENABLE_SEARCH=true
ENABLE_BATCH_TRANSLATION=true
ENABLE_USER_AUTHENTICATION=true

# ===== 生产环境UI配置 =====
DEFAULT_THEME=latte
ENABLE_THEME_SWITCHING=true

# ===== 生产环境优化 =====
PRODUCTION_MODE=true
DEBUG_MODE=false
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true

# ===== 生产环境安全 =====
ENABLE_HTTPS=true
CORS_ALLOWED_ORIGINS=https://your-domain.com

# ===== 生产环境监控 =====
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ERROR_REPORTING_URL=https://your-error-tracking-service.com/api

# ===== 生产环境限制 =====
MAX_FILE_SIZE_MB=10
API_CACHE_EXPIRE_MINUTES=5

# ===== CDN配置 =====
CDN_BASE_URL=https://cdn.your-domain.com
STATIC_ASSETS_URL=https://assets.your-domain.com