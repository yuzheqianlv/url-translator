# URL翻译工具环境配置示例
# 复制此文件为 .env 并修改相应值
# Copy this file to .env and modify the values

# 安全提示：
# 1. 请勿将包含敏感信息的.env文件提交到版本控制系统
# 2. 确保您的API密钥安全存储
# 3. 定期轮换API密钥
# Security Notes:
# 1. Do not commit .env files with sensitive information to version control
# 2. Ensure your API keys are stored securely
# 3. Rotate API keys regularly

# 应用端口 (Docker内部始终为80，此处为外部映射端口)
APP_PORT=3000

# DeepLX API配置 (请填入您的API地址，不含敏感token信息)
# DeepLX API Configuration (Please fill with your API URL, without sensitive token)
DEEPLX_API_URL=http://localhost:1188/translate

# Jina AI Reader配置
JINA_API_URL=https://r.jina.ai

# 速率限制配置
MAX_REQUESTS_PER_SECOND=10
MAX_TEXT_LENGTH=5000
MAX_PARAGRAPHS_PER_REQUEST=10

# 默认语言设置
DEFAULT_SOURCE_LANG=auto
DEFAULT_TARGET_LANG=zh

# =============================================================================
# 外部服务配置 - External Services Configuration
# =============================================================================

# PostgreSQL 数据库配置
# PostgreSQL Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=markdown_manager
POSTGRES_USER=admin

# MeiliSearch 搜索引擎配置
# MeiliSearch Search Engine Configuration
MEILI_MASTER_KEY=your_secure_meilisearch_master_key_here
MEILI_ENV=production

# Redis 缓存配置
# Redis Cache Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT 密钥配置 (用于用户认证)
# JWT Secret Configuration (for user authentication)
JWT_SECRET=your_secure_jwt_secret_key_here

# 后端API配置
# Backend API Configuration
BACKEND_API_URL=http://localhost:3002
API_RATE_LIMIT=100

# =============================================================================
# 数据库连接字符串 - Database Connection Strings
# =============================================================================

# 完整的PostgreSQL连接字符串
# Full PostgreSQL connection string
DATABASE_URL=postgres://admin:${POSTGRES_PASSWORD}@localhost:5432/markdown_manager

# Redis连接字符串
# Redis connection string
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# MeiliSearch连接配置
# MeiliSearch connection configuration
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=${MEILI_MASTER_KEY}

# =============================================================================
# 前端环境配置 - Frontend Environment Configuration
# =============================================================================

# 前端开发服务器配置
# Frontend Development Server Configuration
FRONTEND_PORT=3001
FRONTEND_HOST=localhost

# 前端构建配置
# Frontend Build Configuration
TRUNK_SERVE_PORT=3001
TRUNK_DIST_DIR=dist
TRUNK_BUILD_TARGET=index.html

# API客户端配置
# API Client Configuration
FRONTEND_API_BASE_URL=http://localhost:3002/api/v1
FRONTEND_API_TIMEOUT_SECONDS=30

# =============================================================================
# 功能开关配置 - Feature Toggle Configuration
# =============================================================================

# 功能开关 (true/false)
# Feature toggles (true/false)
ENABLE_PROJECT_MANAGEMENT=true
ENABLE_HISTORY=true
ENABLE_SEARCH=true
ENABLE_BATCH_TRANSLATION=true
ENABLE_USER_AUTHENTICATION=true

# =============================================================================
# UI/UX 配置 - UI/UX Configuration
# =============================================================================

# 主题配置
# Theme configuration
DEFAULT_THEME=latte
ENABLE_THEME_SWITCHING=true
AVAILABLE_THEMES=latte,frappe,macchiato,mocha

# 文件上传配置
# File upload configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.txt,.md,.html,.pdf,.doc,.docx

# =============================================================================
# 性能和缓存配置 - Performance and Cache Configuration
# =============================================================================

# 本地存储配置
# Local storage configuration
LOCAL_STORAGE_EXPIRE_HOURS=24
SESSION_STORAGE_ENABLED=true

# API响应缓存
# API response caching
API_CACHE_ENABLED=true
API_CACHE_EXPIRE_MINUTES=5

# =============================================================================
# 开发环境配置 - Development Environment Configuration
# =============================================================================

# 开发模式配置
# Development mode configuration
DEBUG_MODE=true
HOT_RELOAD=true
RUST_LOG=debug
WASM_LOG=debug

# 开发工具配置
# Development tools configuration
ENABLE_DEVTOOLS=true
ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# 生产环境配置 - Production Environment Configuration
# =============================================================================

# 生产环境API配置
# Production API configuration
PROD_FRONTEND_API_BASE_URL=https://your-domain.com/api/v1
PROD_APP_URL=https://your-domain.com

# 生产环境优化
# Production optimizations
PRODUCTION_MODE=false
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true

# =============================================================================
# 安全配置 - Security Configuration
# =============================================================================

# HTTPS配置
# HTTPS configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# CORS配置
# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# =============================================================================
# 监控和日志配置 - Monitoring and Logging Configuration
# =============================================================================

# 错误追踪配置
# Error tracking configuration
ENABLE_ERROR_TRACKING=true
ERROR_REPORTING_URL=

# 分析和监控
# Analytics and monitoring
ENABLE_ANALYTICS=false
ANALYTICS_ID=

# 日志配置
# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_ACCESS_LOGS=true

# =============================================================================
# 第三方服务配置 - Third Party Services Configuration
# =============================================================================

# 备用API配置（仅开发环境）
# Fallback API configuration (development only)
DEEPLX_API_URL_FALLBACK=
JINA_API_URL_FALLBACK=https://r.jina.ai

# CDN配置
# CDN configuration
CDN_BASE_URL=
STATIC_ASSETS_URL=

# =============================================================================
# 实验性功能配置 - Experimental Features Configuration
# =============================================================================

# 实验性功能开关
# Experimental feature toggles
ENABLE_PWA=false
ENABLE_OFFLINE_MODE=false
ENABLE_DARK_MODE_AUTO=true
ENABLE_KEYBOARD_SHORTCUTS=true

# A/B测试配置
# A/B testing configuration
AB_TEST_ENABLED=false
AB_TEST_VARIANT=